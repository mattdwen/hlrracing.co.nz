<div class="container my-3 my-sm-5">

  <h1><%= page.title %></h1>

  <a class="h5 d-block mb-3" href="/for-sale">For Sale</a>

  <div class="d-flex flex-column flex-sm-row">
    <a class="btn btn-primary d-block mb-3" href="mailto:sales@hlrracing.co.nz?subject=<%= page.title %> For Sale">Email for more information</a>
    <a class="btn btn-primary d-block mb-3 ml-sm-3" href="tel:+64274907041"">Call for more information</a>
  </div>

  <p class="lead"><%= page.description %></p>

  <div id="forSalePhotos" class="my-4 carousel slide bg-secondary" data-ride="carousel">
    <ol class="carousel-indicators">
      <% page.photos.forEach(function(photoUrl, i) { %>
      <li data-target="#forSalePhotos" data-slide-to="<%= i %>" class="<% if (i === 0) { %>active<% } %>"></li>
      <% }) %>
    </ol>
    <div class="carousel-inner">
      <% page.photos.forEach(function(photoUrl, i) { %>
        <div class="carousel-item <% if (i === 0) { %>active<% } %>">
          <img src="/images/<%= photoUrl %>" class="d-block h-100 m-auto">
        </div>
      <% }) %>
    </div>
    <a class="carousel-control-prev" href="#forSalePhotos" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#forSalePhotos" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <%- page.content %>

  <div class="d-flex flex-column flex-sm-row">
    <a class="btn btn-primary d-block mb-3" href="mailto:sales@hlrracing.co.nz?subject=<%= page.title %> For Sale">Email for more information</a>
    <a class="btn btn-primary d-block mb-3 ml-sm-3" href="tel:+64274907041"">Call for more information</a>
  </div>
</div>